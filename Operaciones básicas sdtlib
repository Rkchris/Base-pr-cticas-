#include <stdlib.h>
int num1, num2, num3, num4, suma, resta, multi, divide
int main ()}
printf("digita el peimer número");
scanf(%d, num1);
printf("digita el segundo numero");
scanf(%d, num2);
printf("digita el tercer numero");
scanf(%d, num3);
printf("dijita el cuarto numero");
scanf(%d, num4);
int num1+num2+num3+num4;suma
int num1-num2-num3-num4;resta
int num1*num2*num3*num4;multi
int num1/num2/num3/num4;divide
printf("la suma es ;")suma;
printf("la resta es ;")resta;
printf("la multiplicación es ;") multi;
printf("la division es ;") divide;

